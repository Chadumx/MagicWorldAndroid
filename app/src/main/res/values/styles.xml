<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="bouton">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="boutonPersonnage" parent="bouton">
        <item name="android:textColor">@color/orangeDore</item>
        <item name="android:background">@color/noir</item>
        <item name="android:layout_width">141dp</item>
        <item name="android:layout_height">54dp</item>
    </style>

    <style name="boutonCombat" parent="bouton">
        <item name="android:textColor">@color/rougeSang</item>
        <item name="android:background">@color/gris</item>
        <item name="android:layout_width">174dp</item>
        <item name="android:layout_height">54dp</item>
    </style>

    <style name="texteExplicatif">
        <item name="android:textColor">@color/noir</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nomApplication">
        <item name="android:textSize">60dp</item>
        <item name="android:textColor">@color/noir</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">218dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/noir</item>
        <item name="android:textColorHint">@color/noir</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="vitalite">
        <item name="android:background">@color/noir</item>
        <item name="android:textColor">@color/bleuProfond</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">22dp</item>
    </style>
</resources>
